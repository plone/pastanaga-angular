{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngx-pastanaga": {
      "projectType": "library",
      "root": "projects/ngx-pastanaga",
      "sourceRoot": "projects/ngx-pastanaga/src",
      "prefix": "pa",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-pastanaga/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-pastanaga/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-pastanaga/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/ngx-pastanaga/**/*.ts",
              "projects/ngx-pastanaga/**/*.html"
            ],
            "eslintConfig": "projects/ngx-pastanaga/eslint.config.mjs"
          }
        }
      }
    },
    "documentation": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/documentation",
      "sourceRoot": "projects/documentation/src",
      "prefix": "doc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/documentation",
            "index": "projects/documentation/src/index.html",
            "browser": "projects/documentation/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/documentation/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/documentation/public"
              }
            ],
            "styles": ["projects/documentation/src/styles.css"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "documentation:build:production"
            },
            "development": {
              "buildTarget": "documentation:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "projects/documentation/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/documentation/public"
              }
            ],
            "styles": ["projects/documentation/src/styles.css"],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/documentation/**/*.ts",
              "projects/documentation/**/*.html"
            ],
            "eslintConfig": "projects/documentation/eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "schematicCollections": ["angular-eslint"]
  }
}
