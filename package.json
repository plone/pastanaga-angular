{
    "name": "pastanaga-angular",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "prestart": "npm run icon_list",
        "start": "ng serve",
        "deploy": "npm run icon_list && ng deploy --base-href=/pastanaga-angular/",
        "build:demo": "npm run icon_list && ng build demo --prod --base-href /pastanaga-angular/v2/ && cp ./dist/demo/v2/index.html ./dist/demo/v2/404.html",
        "build": "cp src/pastanaga*.scss . && ng build --prod && cp ./README.md ./dist/pastanaga-angular && cp -r ./projects/pastanaga-angular/src/lib/styles ./dist/pastanaga-angular/lib && cp -r ./projects/pastanaga-angular/src/assets ./dist/pastanaga-angular && rm pastanaga*.scss",
        "lint": "ng lint",
        "test:lib": "jest --config ./projects/pastanaga-angular/jest.config.js",
        "test:lib:watch": "jest --watch --config ./projects/pastanaga-angular/jest.config.js",
        "test:demo": "jest --config ./projects/demo/jest.config.js",
        "test": "npm run test:lib && npm run test:demo",
        "test:ci": "jest --config ./projects/pastanaga-angular/jest.config.js --runInBand --ci",
        "get_version": "cat ./projects/pastanaga-angular/package.json | grep version  | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]'",
        "preicon_list": "cp projects/pastanaga-angular/src/assets/glyphs-sprite.svg projects/demo/src/assets",
        "icon_list": "python -c \"import json; import xml.dom.minidom; print(json.dumps([el.getAttribute('id') for el in xml.dom.minidom.parseString(open('projects/pastanaga-angular/src/assets/glyphs-sprite.svg').read()).getElementsByTagName('symbol')]))\" > projects/demo/src/assets/glyphs.json",
        "prettier": "prettier --write ./projects/pastanaga-angular/src"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~11.0.2",
        "@angular/cdk": "^11.0.1",
        "@angular/common": "~11.0.2",
        "@angular/compiler": "~11.0.2",
        "@angular/core": "~11.0.2",
        "@angular/forms": "~11.0.2",
        "@angular/platform-browser": "~11.0.2",
        "@angular/platform-browser-dynamic": "~11.0.2",
        "@angular/router": "~11.0.2",
        "angular-svg-icon": "^9.2.0",
        "angular-traversal": "^1.9.3",
        "date-fns": "^2.14.0",
        "rxjs": "~6.5.4",
        "tslib": "^2.0.0",
        "zone.js": "~0.10.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.1100.2",
        "@angular/cli": "~11.0.2",
        "@angular/compiler-cli": "~11.0.2",
        "@briebug/jest-schematic": "^2.1.1",
        "@ngneat/spectator": "^6.0.0",
        "@types/jest": "^25.2.3",
        "@types/node": "^12.11.1",
        "angular-cli-ghpages": "^0.6.2",
        "codelyzer": "^6.0.0",
        "husky": "^4.3.0",
        "jest": "^25.5.4",
        "jest-canvas-mock": "^2.2.0",
        "jest-preset-angular": "^8.2.0",
        "ng-mocks": "^10.2.0",
        "ng-packagr": "^11.0.3",
        "prettier": "2.0.5",
        "pretty-quick": "^3.0.2",
        "rxjs-tslint-rules": "^4.34.3",
        "ts-node": "~8.3.0",
        "tslint": "~6.1.0",
        "typescript": "~4.0.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged",
            "pre-push": "sh .githooks/pre-push"
        }
    }
}
